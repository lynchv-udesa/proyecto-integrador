<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= nombreUsuario %>
						<a href="profile-edit.html">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li>8 productos</li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<% for (let i=3; i < index[9]; i++ ) { %>	
						<a href="/product/<%= index[i].id %>">
							<figure class="product-box_image">
								<img src="<%= index[i].imagen %>" alt="">
							</figure>
							<article class="product-box_data">
								<h2><%= index[i].nombreProducto %></h2>
								<p><%= index[i].descripcion %></p>
								<p>Comentarios: 3</p>
							</article>
						</a>
						<% } %>
				</section>
			</div>


		</div>
	</div>
	<!-- /Mis productos -->
    <%- include('./partials/footer') %>
</body>
</html>