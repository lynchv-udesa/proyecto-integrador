<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head') %>
<body>
    <%- include('./partials/header') %>
<!-- product detail -->
    <div class="product-detail">
        <div class="row">
            <article class="col-12 col-lg-8 product-detail-info">
                <img src="<%= imagen %>" alt="" class="product-detail-img">
                <p class="product-detail-description">
                    <%= descripcion %></p>
            </article>

            <div class="container products-wrapper details">
                <div class="d-flex align-items-center">
                    <h2 class="products-title"><%= nombreProducto %></h2> 
                    <p class="product-detail-description">
                        <a href="/product/add">Editar</a>
                    </p>
                </div>

            <div class="col-12 col-lg-4">
                <section class="comments">
                    <% for (let i=0; i < 4; i++ ) { %>
                    <article>
                        <img src="<%= comment[i].imagenPerfilC %>" alt="">
                        <div class="data">
                            <p class="user">
                            <strong> <a href="profile.ejs"><%= comment[i].nombreUsuarioC %></a> </strong>
                            <%= comment[i].textoC %>
                        </div>
                    </article>
                    <% } %>

                </section>
                <form class="form" action="" method="POST">
                    <input class="form-input" type="text" value="" placeholder="Agregar comentario">
                    <button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
                </form>
                <hr>
            </div>
        </div>
    </div>
</div>
<!-- /product detail -->
    <%- include('./partials/footer') %>
</body>
<script src="/js/uikit.min.js"></script>
<script src="/js/header-scroll.js"></script>
</html>