<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

<body>
    <%- include('./partials/headerLogueado', { nombreUsuario: locals.user.nombreUsuario }) %>
    <main class="mainRegister"></main>
    <div class="col-12">
        <h2 class="products-title">
            <%= locals.mensaje %>
        </h2>
    </div>
    <div class="container__form">
        <img src="/images/logo.png" alt="">
        <form class="form-data" action="/products/update/<%= producto.id %>" method="post" >
            <div class="contenedor-input">
                <input class="form-input" type="text" name="imagen" placeholder="Imagen" value="<%= locals.oldData && oldData.imagen ? oldData.imagen : '' %>">
                <label class="form-label" for="imagen"></label>
                <% if (locals.errors && errors.imagen) { %>
                    <div class="error-msg"><%= errors.imagen.msg %></div>
                <% } %>
            </div>

            <div class="contenedor-input">
                <input class="form-input" type="text" name="nombre" placeholder="Nombre del producto" value="<%= locals.oldData && oldData.nombre ? oldData.nombre : '' %>">
                <label class="form-label" for="nombre"></label>
                <% if (locals.errors && errors.nombre) { %>
                    <div class="error-msg"><%= errors.nombre.msg %></div>
                <% } %>
            </div>

            <div class="contenedor-input">
                <textarea class="form-input" name="descripcion" placeholder="DescripciÃ³n"><%= locals.oldData && oldData.descripcion ? oldData.descripcion : '' %></textarea>
                <label class="form-label" for="descripcion"></label>
                <% if (locals.errors && errors.descripcion) { %>
                    <div class="error-msg"><%= errors.descripcion.msg %></div>
                <% } %>
            </div>

            <div class="contenedor-input1">
                <input class="form-input__button" type="submit" value="Guardar cambios">
                <label class="form-label" for="Agregar"></label>
            </div>
        </form>
    </div>
    </main>
    <%- include('./partials/footer') %>
    <script src="/js/uikit.min.js"></script>
    <script src="/js/header-scroll.js"></script>
</body>

</html>
