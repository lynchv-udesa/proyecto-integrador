<!DOCTYPE html>
<html>
    <%- include('./partials/head') %>
  <body>
    <%- include('./partials/header') %>
	<!-- Banner -->
	<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<% for (let i=0; i < index[5]; i++ ) { %>	
					<a href="/product/<%= index[i].id %>">
						<figure class="product-box_image">
							<img src="<%= index[i].imagen %>" alt="">
						</figure>
						<article class="product-box_data">
							<h2><%= index[i].nombreProducto %></h2>
							<p><%= index[i].descripcion %></p>
							<p>Comentarios: 3</p>
						</article>
					</a>
					<% } %>
				</section>
			</div>
 

			
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<% for (let i=5; i < index.length; i++ ) { %>	
						<a href="product.ejs">
							<figure class="product-box_image">
								<img src="<%= index[i].imagen %>" alt="">
							</figure>
							<article class="product-box_data">
								<h2><%= index[i].nombreProducto %></h2>
								<p><%= index[i].descripcion %></p>
								<p>Comentarios: 3</p>
							</article>
						</a>
						<% } %>
				</section>
			</div>
			
		</div>
	</div>
	<!-- /Más comentados -->
    <%- include('./partials/footer') %>
  </body>
</html>
